                </li>
            </ul>
        </div>

        <div class="container" id="resume_cards">
            <hr>
            <%- include('dash_parts/resume_cards') %>
        </div>

        <div class="container" id="sales_chart">
            <%- include('dash_parts/sales_chart') %>
        </div>

        <div class="container" id="ranking">
            <%- include('dash_parts/ranking') %>
        </div>

        <div class="container" id="resume_charts">
            <%- include('dash_parts/resume_charts') %>
